<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/discover"
    tools:context=".Dashboard">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/discover"
                android:layout_marginTop="25dp"
                android:textSize="45sp"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/subtitle"
                android:layout_marginTop="25dp"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textAlignment="center" />

            <androidx.cardview.widget.CardView
                android:id="@+id/anxiety"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:elevation="32dp"
                app:cardCornerRadius="8dp"
                android:layout_margin="30dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/bg1">

                    <ImageView
                        android:src="@drawable/anxiety"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:contentDescription="@string/anxiety"
                        android:layout_marginTop="80dp"
                        android:layout_marginStart="20dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="30dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/anxiety"
                            android:textColor="#ffffff"
                            android:textSize="27sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/anxietyQuote"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:textSize="15sp"/>

                    </LinearLayout>



                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/depression"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                app:cardCornerRadius="8dp"
                android:layout_margin="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:elevation="32dp"
                    android:background="@drawable/bg2">

                    <ImageView
                        android:src="@drawable/depression"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:contentDescription="@string/depression"
                        android:layout_marginTop="80dp"
                        android:layout_marginStart="20dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="30dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/depression"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:textSize="27sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/depressionQuote"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:textSize="15sp"/>

                    </LinearLayout>



                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/stress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:elevation="32dp"
                app:cardCornerRadius="8dp"
                android:layout_margin="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/bg3">

                    <ImageView
                        android:src="@drawable/stress"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:contentDescription="@string/stress"
                        android:layout_marginTop="80dp"
                        android:layout_marginStart="20dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="30dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/stress"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:textSize="27sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/stressQuote"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:textSize="15sp"/>

                    </LinearLayout>



                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>



    </ScrollView>
