<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StressYoga"
    android:padding="10dp"
    android:background="@drawable/yoga3bg"
    android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rel_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/pBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:layout_centerHorizontal="true"
                android:text="@string/yoga"
                android:textSize="45sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textAlignment="center"/>


            <TextView
                android:id="@+id/music1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/music"
                android:layout_marginStart="15dp"
                android:layout_marginTop="145dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:text="@string/yoga1"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp" />

            <com.ohoussein.playpause.PlayPauseView
                android:id="@+id/play_pause_view1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_below="@id/music"
                android:layout_marginStart="280dp"
                android:layout_marginTop="145dp"
                android:foreground="?android:selectableItemBackground"
                app:fill_color="#e1e1e1"
                app:pause_bg="#FFA726"
                app:play_bg="#0288D1" />


            <TextView
                android:id="@+id/music2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/music1"
                android:layout_margin="15dp"
                android:text="@string/yoga2"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold"
                />

            <com.ohoussein.playpause.PlayPauseView
                android:id="@+id/play_pause_view2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_below="@id/music1"
                android:layout_marginStart="280dp"
                android:layout_marginTop="20dp"
                android:foreground="?android:selectableItemBackground"
                app:fill_color="#e1e1e1"
                app:pause_bg="#FFA726"
                app:play_bg="#0288D1" />



            <TextView
                android:id="@+id/music3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/music2"
                android:layout_margin="15dp"
                android:text="@string/yoga3"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold"/>


            <com.ohoussein.playpause.PlayPauseView
                android:id="@+id/play_pause_view3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_below="@id/music2"
                android:layout_marginStart="280dp"
                android:layout_marginTop="20dp"
                android:foreground="?android:selectableItemBackground"
                app:fill_color="#e1e1e1"
                app:pause_bg="#FFA726"
                app:play_bg="#0288D1" />



            <TextView
                android:id="@+id/music4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/music3"
                android:layout_margin="15dp"
                android:text="@string/yoga4"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold"
                />


            <com.ohoussein.playpause.PlayPauseView
                android:id="@+id/play_pause_view4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_below="@id/music3"
                android:layout_marginStart="280dp"
                android:layout_marginTop="20dp"
                android:foreground="?android:selectableItemBackground"
                app:fill_color="#e1e1e1"
                app:pause_bg="#FFA726"
                app:play_bg="#0288D1" />



        </RelativeLayout>


    </ScrollView>
